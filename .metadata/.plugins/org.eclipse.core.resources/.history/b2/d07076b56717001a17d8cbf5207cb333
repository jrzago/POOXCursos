	/**
	 * Create the frame.
	 */
	public frmListaAlunos() {
		setIconImage(Toolkit.getDefaultToolkit().getImage("C:\\workspace\\POOXandao\\img\\Icon - 200 x 200.jpg"));
		this.objBD = new bd("POOX","root","");
		setTitle("Alunos Cadastrados - Buscar ...");
		setBounds(100, 100, 750, 588);
